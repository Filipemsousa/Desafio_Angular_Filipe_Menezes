{
  "name": "desafio-angular-monorepo",
  "version": "1.0.0",
  "description": "Desafio Angular - Monorepo profissional com frontend Angular e backend Node.js",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "npm run start --workspace=apps/angular-app",
    "start:api": "npm run start --workspace=apps/api",
    "build": "npm run build --workspace=apps/angular-app",
    "test": "npm run test --workspace=apps/angular-app",
    "lint": "npm run lint --workspace=apps/angular-app",
    "install:all": "npm install",
    "clean": "npm run clean --workspaces --if-present",
    "format": "npm run format --workspace=apps/angular-app --if-present"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Filipemsousa/Desafio_Angular_Filipe_Menezes.git"
  },
  "keywords": [
    "angular",
    "nodejs",
    "monorepo",
    "typescript",
    "express"
  ],
  "author": "Filipe Menezes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Filipemsousa/Desafio_Angular_Filipe_Menezes/issues"
  },
  "homepage": "https://github.com/Filipemsousa/Desafio_Angular_Filipe_Menezes#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
